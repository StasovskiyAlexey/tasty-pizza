generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pizza {
  id          Int               @id @default(autoincrement())
  name        String
  description String
  image       String
  price       Int
  weight      Int?
  category    String?
  orderItems  OrderItem[]
  collection  PizzaCollection[]
  variants    PizzaVariant[]

  @@map("pizza")
}

model PizzaVariant {
  id         Int            @id @default(autoincrement())
  pizzaId    Int
  size       String
  dough      String
  weight     Int?
  price      Int
  orderItems OrderItem[]
  pizza      Pizza          @relation(fields: [pizzaId], references: [id])
  cartItems  UserCartItem[]

  @@unique([pizzaId, size, dough])
  @@map("pizza_variant")
}

model PizzaCollection {
  pizza_name   String
  pizzaId      Int
  collectionId Int
  collection   IngredientCollection @relation(fields: [collectionId], references: [id])
  pizza        Pizza                @relation(fields: [pizzaId], references: [id])

  @@id([pizzaId, collectionId])
  @@map("pizza_collection")
}

model IngredientCollection {
  id          Int                       @id @default(autoincrement())
  name        String
  ingredients IngredientOnCollections[]
  pizzas      PizzaCollection[]

  @@map("ingridient_collection")
}

model Ingredient {
  id              Int                       @id @default(autoincrement())
  ingridient_name String
  image           String
  slug            String?
  collection      IngredientOnCollections[]

  @@map("ingridient")
}

model IngredientOnCollections {
  ingredientId Int
  collectionId Int
  collection   IngredientCollection @relation(fields: [collectionId], references: [id])
  ingredient   Ingredient           @relation(fields: [ingredientId], references: [id])

  @@id([ingredientId, collectionId])
  @@map("ingredient_on_collections")
}

model UserCart {
  id     Int            @id @default(autoincrement())
  userId Int            @unique
  user   User           @relation(fields: [userId], references: [id])
  items  UserCartItem[]

  @@map("user-cart")
}

model UserCartItem {
  id        Int          @id @default(autoincrement())
  cartId    Int
  variantId Int          @default(1)
  quantity  Int          @default(1)
  cart      UserCart     @relation(fields: [cartId], references: [id])
  variant   PizzaVariant @relation(fields: [variantId], references: [id])

  @@unique([cartId, variantId])
  @@map("user-cart-item")
}

model Order {
  id        Int         @id @default(autoincrement())
  userId    Int
  totalPrice Int
  createdAt DateTime    @default(now())
  status    OrderStatus @default(PENDING)
  name      String
  phone     String
  street    String
  apartment String
  house     String
  user      User        @relation(fields: [userId], references: [id])
  items     OrderItem[]

  @@map("orders")
}

model OrderItem {
  id        Int          @id @default(autoincrement())
  orderId   Int
  pizzaId   Int
  variantId Int
  quantity  Int          @default(1)
  price     Float
  order     Order        @relation(fields: [orderId], references: [id])
  pizza     Pizza        @relation(fields: [pizzaId], references: [id])
  variant   PizzaVariant @relation(fields: [variantId], references: [id])

  @@map("order-item")
}

model User {
  id        Int       @id @default(autoincrement())
  username  String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  orders    Order[]
  userCart  UserCart?

  @@map("user")
}

enum OrderStatus {
  PENDING
  CONFIRMED
  DELIVERING
  COMPLETED
  CANCELED
}
