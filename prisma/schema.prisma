generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pizza {
  id          Int @id @default(autoincrement())
  name        String
  description String
  image       String
  price       Int
  weight Int?
  category String?

  cartItems UserCartItem[]
  collection PizzaCollection[]

  orderItems OrderItem[]

  @@map("pizza")
}

model PizzaCollection {
  pizza_name String
  pizzaId Int
  collectionId Int 

  pizza Pizza @relation(fields: [pizzaId], references: [id])
  collection IngredientCollection @relation(fields: [collectionId], references: [id])

  @@id([pizzaId, collectionId])
  @@map("pizza_collection")
}

model IngredientCollection {
  id         Int @id @default(autoincrement())
  name       String

  pizzas PizzaCollection[]
  ingredients IngredientOnCollections[]

  @@map("ingridient_collection")
}

model Ingredient {
  id Int @id @default(autoincrement())
  ingridient_name String
  image String
  slug String?

  collection  IngredientOnCollections[]

  @@map("ingridient")
}

model IngredientOnCollections {
  ingredientId Int
  collectionId Int

  ingredient  Ingredient @relation(fields: [ingredientId], references: [id])
  collection  IngredientCollection @relation(fields: [collectionId], references: [id])

  @@id([ingredientId, collectionId])
  @@map("ingredient_on_collections")
}

model UserCart {
  id        Int          @id @default(autoincrement())
  userId    Int          @unique
  user      User         @relation(fields: [userId], references: [id])

  items     UserCartItem[]
  @@map("user-cart")
}

model UserCartItem {
  id        Int        @id @default(autoincrement())
  cartId    Int
  cart      UserCart   @relation(fields: [cartId], references: [id])

  productId Int
  product   Pizza    @relation(fields: [productId], references: [id])

  quantity  Int        @default(1)

  @@unique([cartId, productId]) // чтобы один товар не дублировался в корзине
  @@map("user-cart-item")
}

model Order {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())

  items     OrderItem[]

  @@map("order")
}

model OrderItem {
  id       Int    @id @default(autoincrement())
  orderId  Int
  order   Order  @relation(fields: [orderId], references: [id])
  
  pizzaId Int
  pizza Pizza @relation(fields: [pizzaId], references: [id])
  
  quantity Int @default(1)

  @@map("order-item")
}

model User {
  id        Int @id @default(autoincrement())
  username  String  
  email String @unique
  password  String
  createdAt DateTime @default(now())

  // Связи
  orders    Order[]   // один ко многим
  userCart      UserCart?      // один к одному

  @@map("user")
}

